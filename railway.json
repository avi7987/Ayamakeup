{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["**/*.js", "**/*.json"],
    "nixPacks": {
      "packages": ["chromium"]
    }
  },
  "deploy": {
    "startCommand": "PUPPETEER_EXECUTABLE_PATH=$(which chromium-browser || which chromium) node server-cloud.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
