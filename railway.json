{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["**/*.js", "**/*.json"],
    "nixpacksPlan": {
      "phases": {
        "install": {
          "nixPkgs": ["nodejs", "chromium"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true PUPPETEER_EXECUTABLE_PATH=$(which chromium) node server-cloud.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
