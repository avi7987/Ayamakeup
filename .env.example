# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Server Port
PORT=3000

# Environment
NODE_ENV=production

# Puppeteer Configuration (for Railway deployment)
# If using Railway, this should be set to the system Chrome path
# Railway will automatically install Chromium if configured in railway.json
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
